<%- include('template/header'); %>
<div class= 'flex-container'>
  
    <% if (error) { %>
        <div class = 'text-container'> <h1><%=message %> </h1> </div>
        <div class = 'text-container'> <a href="/listtodo" style="color:black"><h2>resume to the list </h2></a></div>
    
    <% } %>
    </div>
    <% if (!error) { %>
        <div class= 'flex-container'>
            <div class = 'text-container'> <h1> Edit your task </h1> </div>
        </div>

        <div class= 'grid-container'>
            <div class= 'elements-title'><u> Date </u></div> 
            <div class= 'elements-title'><u>Task</u></div>  
            <div class= 'elements-title'><u>Action</u></div>
             
                <div class= 'elements'><%= taskId.date %></div>  
                <div class= 'elements'><%= taskId.task %> </div>  
                <div class= 'elements-bottom'>
                  <button class='button-edit' type="button">Edit</button>
                </div>   
           
    <% } %>
   
   
<%- include('template/footer'); %>